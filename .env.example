# Blue/Green Deployment
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

ACTIVE_POOL=blue

RELEASE_ID_BLUE=release-blue-001
RELEASE_ID_GREEN=release-green-001

PORT=8080

BLUE_HOST_PORT=8081
GREEN_HOST_PORT=8082

NGINX_PORT=8080

# Observability & Alerts
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Error rate threshold as percentage (e.g., 2.0 = 2%)
ERROR_RATE_THRESHOLD=2.0

# Number of requests to track in sliding window
WINDOW_SIZE=200

# Cooldown between similar alerts (seconds) - prevents spam
ALERT_COOLDOWN_SEC=300

# Set to 'true' to suppress failover alerts during planned maintenance
MAINTENANCE_MODE=false